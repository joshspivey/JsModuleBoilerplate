label input {
	float: left;
}


label.long {
	margin-left: 25px;
}
.ie7 label.long {
	margin-left: 0;
}

label.long input[type="checkbox"] + span::before {
	margin-left: -17px;
}

.hotspot {
	float: left;
	margin-top: 10px;
	margin-left: 6px;
	cursor: help;
}

.thank-you a {
	color: #d80546;
}
