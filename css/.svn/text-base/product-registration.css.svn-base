/* Regular Form styles */


.form-area {
	padding: 20px 10px;
	background-color: #eee;
	border-radius: 7px;
}

.form fieldset{
	padding: 20px 10px;
	background-color: #eee;
	border-radius: 7px;
}

.form input[type="text"],.form input[type="date"],.form input[type="email"],.form input[type="tel"],.form input[type="number"] {
	width:130px;
	height:20px;
	background:#FFFFFF;
	border:1px solid #cccccc;
	font-family: Arial, Helvetica, sans-serif;
	font-size:10px;
	padding-left:5px;
	font-weight:normal;
	color:#5d5c5c;
	margin-right:0px;
	margin-left:5px;
}

.form input.x-large{
	width:180px;
}
.form input.large{
	width:160px;
}

.form input.small{
	width:100px;
}
.form input.x-small{
	width:20px;
}

.form label{
	margin:6px 0;
}
.form label span.single{
	width:114px;
	
}
.form label.indent-single{
	margin-left:124px;
	
}
.form label span{
	margin-right:4px;
}
.form label span.middle{
	margin-top:5px;
	
}

.form label.with-select{
	width:170px;	
}
.form label.full{
	width:100%;
}


/* many overrides to make the form eleemnts line up neatly, wow. */
.styled-input {
	background-color: #fff;
	margin-bottom: 3px;
}

.styled-input.x-large {
	width: 277px;
}
.styled-input.x-large input {
	width: 274px;
}

.styled-input.large {
	width: 168px;
}
.styled-input.large input {
	width: 165px;
}

.styled-input.medium {
	width: 120px;
}
.styled-input.medium input {
	width: 117px;
}

.styled-select.medium {
	width: 185px;
	margin-left:5px;
}
.lt-ie9 .styled-select.medium {
	width: 180px;
	float:left;
}

.styled-select.medium select {
	width: 205px;
}

.lt-ie9 .styled-select.medium select {
	width: 180px;
}

.styled-input.small {
	
}
.styled-input.small input {
	width:72px;
}

.styled-input.x-small {
	width: 20px;
	/* margin, just because it doesn't have the "required" asterisk in front */
	margin-left: 7px;
}
.styled-input.x-small input {
	width: 17px;
}

.legend {
	width: 100%;
	margin-bottom: 10px;
}

.legend span { /* for IE7 */
	float: left;
}

mark {
	float: left;
	margin-right: 2px;
	margin-top: 5px;
	font-weight: 300;
	background-color: transparent;
	color: #d4043f;
}

mark.example {
	float: right;
	margin: 0 3px 0 0;
}

/* this is kind of a mess but needed for IE7 */

