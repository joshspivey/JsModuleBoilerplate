body {
	background: none;
	margin-bottom:50px;
	float:left;
}

.registration {
	margin: 0;
	width: 460px;
}

.registration > li {
	display: none;
}

.registration > li:first-child {
	display: block;
}

.steps h5 {
	font-weight: 700;
	text-transform: none;
	font-size: 11px;
	font-family: Arial, Helvetica, sans-serif;
	display: inline;
	vertical-align: middle;
}

.steps {
	margin: 2px 0 0 0;
}

form{
	margin-top: 10px;
}

.steps label {
	clear: left;
    display: block;
    font-weight: bold;
    padding-top: 10px;
    margin-left: 25px; /*To line up with the rest of the form elements that have been indented*/
}

ol.steps {
	list-style: none;
}

.steps li {
	background-color: #f2f2f2;
	visibility: hidden;
	padding:10px;
}

.steps li:first-child {
	background-color: transparent;
	visibility: visible;
	padding:0px;
}

.steps i {
	font-size: 10px;
	font-style: italic;
	margin-left: 58px;
	vertical-align: bottom;
}

.ie7 .steps i {
	margin-left: 50px;
}

.category {
	clear: both;
	padding: 0px;
}

.category a {
	display: block;
	float: left;

	padding: 106px 10px 10px 10px;
	width: 120px;

	margin-left: 12px;
	border: 1px solid #999;
	text-decoration: none;
	color: #fff;
	text-align: center;

	/* todo: change URL */
	background: #999 url("/common/images/register.png") no-repeat scroll 0 0;
}

.category a:first-child {
	margin-left: 0;
}

.category a.active {
	border-color: #d80546;
	background-color: #d80546
}

a.appliances {
	background-position: -144px 0;
}

a.computer {
	background-position: -288px 0;
}

.link-list a {
	padding-left: 5px;
	margin-left: 5px;
	border-left: 1px solid #858484;
	font-size: 10px;
	font-family: "BryantLGRegular";
	text-transform: uppercase;
}

.link-list a:first-child {
	padding-left: 0;
	margin-left: 0;
	border-left: none;
}

.link-list a.active {
	color: #d80546;
}

.multi select {
	width: 165px;
	height: 150px;
	float: left;
	font-size: 12px;
}

.multi .styled-input {
	width: 180px;
	margin-top: 5px;
	margin-left: 25px; /*To line up with the rest of the form elements that have been indented*/
	clear: left;
	background-color: #fff;
}

.multi .styled-input {
	height: auto;
}

.multi .styled-input input {
	padding: 0;
	width: 174px;
	margin: 3px;
	height: 14px;
}

.multi button {
	float: left;
	clear: none;
}

#image {
	background-color: #fff;
	margin-left: 34px;
	display: none;
}

.image-block {
	float: none;
	clear: none;
}

